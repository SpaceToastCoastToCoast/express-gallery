extends ./layout

block body
  div#editPostForm
    form(action=`/gallery/${id}` method="post" name ="validate" onsubmit="return validateForm()")
      input(type='hidden' name='_method' value='PUT')
      p Title
      input(type='text' name='title' value=title required)
      p Author
      input(type='text' name='author' value=author required)
      p Link
      input(type='text' name='link' value=link required)
      p Description
      textarea(name='description' rows='16' cols='48' required) #{description}
      p Hashtags
      input(type='text' name='hashtags' value=hashtags)
      input(type='submit' value='Submit')
      a(href=`/gallery/${id}`)
        button Go Back
  script(type='text/javascript' src='/js/validate.js')