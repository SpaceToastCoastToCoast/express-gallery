extends ./layout.pug

block body
  h5#photoTitle #{title}
  div#main
    div#photoDiv
      img(src=`${link}` class='detail')
      div#description
        h5 #{author} (posted by #{poster})
        p #{description}
        p #{hashtags}
      a(href=`/gallery/${id}/edit`)
        if user.auth !== false && (user.id == uid || user.id == 1)
          button Edit Post
      a(href=`/gallery/${id}/delete`)
        if user.auth !== false && (user.id == uid || user.id == 1)
          button Delete Post
    div#sidebar
      each rel in relatedPhotos
        div.relatedPhoto
          a(href=`/gallery/${rel.id}`)
            img(src=`${rel.link}` class='relatedPreview')
        h5 #{rel.title}