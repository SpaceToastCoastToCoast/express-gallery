extends ./layout.pug

block body
  div#buttons
    if isLoggedIn
      a(href="/logout")
        button Log Out
    else
      a(href="/login")
        button Log In
    a(href="/gallery/new")
      button New Photo
  div#featured
    img(src=`${featured.link}` id='featuredImage')
  div#main
    div#gallery
      each photo in gallery
        div.galleryPreview
          a(href=`/gallery/${photo.id}`)
            img(src=`${photo.link}` class='preview')
          h5 #{photo.title}